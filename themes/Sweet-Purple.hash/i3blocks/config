full_text=
align=center
separator=false
color=#222638
separator_block_width=6
markup=pango

[root]
color=#7e57c2
command=df -h / | awk 'FNR==2{print $4}'
interval=3
label=<span color="#c50ed2"> </span>

[separator]

[cpu_usage]
color=#7e57c2
command=~/.config/i3blocks/cpu_usage/cpu_usage
interval=2
label=<span color="#c50ed2"> </span>
#min_width=CPU: 100.00%

[separator]

[memory]
color=#7e57c2
command=~/.config/i3blocks/memory/memory
label=<span color="#c50ed2"> </span>
interval=30

[separator]

[temperature]
color=#7e57c2
command=~/.config/i3blocks/temperature/temperature
label=<span color="#c50ed2"> </span>
interval=10

[separator]

[volume]
color=#7e57c2
label=<span color="#c50ed2"> </span>
instance=Master
command=~/.config/i3blocks/volume/volume
interval=once
signal=2

[separator]

[wifi]
color=#7e57c2
command=ssid=$(iwgetid -r) ; [[ $ssid == "" ]] && ssid="N/A" ; echo $ssid
interval=5
label=<span color="#c50ed2"> </span>

[separator]

[time]
color=#7e57c2
command=date '+%A %e (%I:%M)'
interval=1
label=<span color="#c50ed2"> </span>

[separator]



