full_text=
align=center
separator=false
color=#1a1919
separator_block_width=6
markup=pango

[root]
color=#b4afb9
command=df -h / | awk 'FNR==2{print $4}'
interval=3
label=<span color="#ec0101"> </span>

[separator]

[cpu_usage]
color=#b4afb9
command=~/.config/i3blocks/cpu_usage/cpu_usage
interval=2
label=<span color="#ec0101"> </span>
#min_width=CPU: 100.00%

[separator]

[memory]
color=#b4afb9
command=~/.config/i3blocks/memory/memory
label=<span color="#ec0101"> </span>
interval=30

[separator]

[temperature]
color=#b4afb9
command=~/.config/i3blocks/temperature/temperature
label=<span color="#ec0101"> </span>
interval=10

[separator]

[volume]
color=#b4afb9
label=<span color="#ec0101"> </span>
instance=Master
command=~/.config/i3blocks/volume/volume
interval=once
signal=2

[separator]

[wifi]
color=#b4afb9
command=ssid=$(iwgetid -r) ; [[ $ssid == "" ]] && ssid="N/A" ; echo $ssid
interval=5
label=<span color="#ec0101"> </span>

[separator]

[time]
color=#b4afb9
command=date '+%A %e (%I:%M)'
interval=1
label=<span color="#ec0101"> </span>

[separator]



